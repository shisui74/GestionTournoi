<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">



    <TextView
        android:id="@+id/textview_gestionTournoi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:background="#009688"
        android:text="Gestion Tournoi"
        android:gravity="center"
        android:textColor="@color/white">
    </TextView>


    <TextView
        android:id="@+id/textview_creerEquipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:text="Créer équipe"
        android:textSize="20sp"
        android:textColor="#FFFFFF">
    </TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/editNomEquipe"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Nom : "></EditText>



        <EditText
            android:id="@+id/editvilleEquipe"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ville : "
            android:layout_gravity="center"
            android:layout_marginLeft="20sp">
        </EditText>



    </LinearLayout>

    <Button
        android:id="@+id/buttonCreerEquipe"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Créer l'équipe"
        android:layout_gravity="center"/>

    <!-- Section : Créer un match -->
    <TextView
        android:id="@+id/textview_creerMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:text="Créer un match"
        android:textSize="20sp"
        android:textColor="#FFFFFF">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/editDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Date : "></EditText>



        <EditText
            android:id="@+id/editLieu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Lieu : "
            android:layout_gravity="center"
            android:layout_marginLeft="20sp">
        </EditText>



    </LinearLayout>


        <!-- Section : Créer un match -->



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>
        <Spinner
            android:id="@+id/spinnerEquipe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerEquipe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    <Button
        android:id="@+id/buttonCreerMatch"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Créer le match"
        android:layout_gravity="center"/>





</LinearLayout>




