<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">



    <TextView
        android:id="@+id/textview_gestionTournoi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="25sp"
        android:background="#009688"
        android:text="Gestion Tournoi"
        android:gravity="center"
        android:textColor="@color/white">
    </TextView>


    <TextView
        android:id="@+id/textview_creerEquipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:text="Créer équipe"
        android:textSize="20sp"
        android:textColor="#FFFFFF">
    </TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/moins"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Nom : "></EditText>



        <EditText
            android:id="@+id/zero"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ville : "
            android:layout_gravity="center"
            android:layout_marginLeft="20sp">
        </EditText>



    </LinearLayout>

    <Button
        android:id="@+id/buttonAddTeam"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Créer l'équipe"
        android:layout_gravity="center"/>



</LinearLayout>